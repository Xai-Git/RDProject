<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:p="http://www.springframework.org/schema/p" 
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

    <!-- Configures the @Controller programming model -->
    <mvc:annotation-driven />

    <!-- Forwards requests to the "/" resource to the "login" view 
    <mvc:view-controller path="/" view-name="login"/>-->

    <!-- Configures Handler Interceptors -->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/dashboard"/>
            <mvc:mapping path="/school"/>
            <mvc:mapping path="/accounts/**"/>
            <mvc:mapping path="/instructor"/>
            <mvc:mapping path="/dateoverride/**"/>
            <mvc:mapping path="/pending"/>
            <mvc:mapping path="/applicant-search"/>
            <mvc:mapping path="/applicant-results"/>
            <mvc:mapping path="/applicant/**"/>
            <bean class="rdproject.interceptor.SessionCheckInterceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/applicant/permit"/>
            <mvc:mapping path="/applicant/correspondence"/>
            <mvc:mapping path="/applicant/application"/>
            <mvc:mapping path="/applicant/school"/>
            <mvc:mapping path="/applicant/exemptions"/>
            <mvc:mapping path="/applicant/sheriff"/>
            <mvc:mapping path="/applicant/namesearch"/>
            <mvc:mapping path="/applicant/fingerprint"/>
            <mvc:mapping path="/applicant/image"/>
            <bean class="rdproject.interceptors.RdLoginInterceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/applicant/permit"/>
            <mvc:mapping path="/applicant/correspondence"/>
            <mvc:mapping path="/applicant/application"/>
            <mvc:mapping path="/applicant/school"/>
            <mvc:mapping path="/applicant/exemptions"/>
            <mvc:mapping path="/applicant/sheriff"/>
            <mvc:mapping path="/applicant/namesearch"/>
            <mvc:mapping path="/applicant/fingerprint"/>
            <mvc:mapping path="/applicant/image"/>
            <bean class="rdproject.interceptor.RdDashboardInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>
    
    <!--
        - This bean configures the 'prefix' and 'suffix' properties of 
        - InternalResourceViewResolver, which resolves logical view names 
        - returned by Controllers.
    -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" p:prefix="/WEB-INF/jsp/" p:suffix=".jsp"/>
    
      <bean id="messageAdapter" class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
    </bean>

</beans>
